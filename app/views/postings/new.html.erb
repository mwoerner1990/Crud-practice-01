<h1> Add a Posting </h1>

<h1>New Posting </h1>
<%= form_tag '/postings', method: :post do %>
  <div>
    <%= label_tag :name%>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price%>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  </div>
  <%= submit_tag "Add Posting" %>
<% end %>

<a href="/postings"> Go back to the homepage! </a>